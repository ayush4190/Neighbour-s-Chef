<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <com.skydoves.androidveil.VeilRecyclerFrameView
        android:id="@+id/recycler_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:veilFrame_layout="@layout/card_order"
        app:veilFrame_shimmerEnable="true"
        app:veilFrame_baseColor="@android:color/darker_gray"
        app:veilFrame_highlightColor="@color/silver"
        app:veilFrame_veiled="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_orders_128"
        android:text="@string/empty_orders"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:layout_gravity="center"
        tools:visibility="visible"/>

</FrameLayout>
